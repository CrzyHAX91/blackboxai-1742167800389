# Application Settings
FLASK_APP=server.py
FLASK_ENV=production
DEBUG=False
SECRET_KEY=change_this_to_a_secure_random_string
DOMAIN_NAME=badbeatstools.io

# Database Settings
DB_PASSWORD=change_this_to_a_secure_password
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@db:5432/badbeatstools
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=change_this_to_a_secure_password

# SSL Settings
SSL_ENABLED=true
SSL_REDIRECT=true

# Security Settings
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
CORS_ORIGINS=https://badbeatstools.io,https://www.badbeatstools.io

# Email Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Payment Processing
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Storage Settings
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=badbeatstools-production
AWS_REGION=us-east-1

# CDN Settings
CDN_DOMAIN=cdn.badbeatstools.io
USE_CDN=True

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO

# Premium Features
PREMIUM_ENABLED=True
TRIAL_DAYS=14

# API Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=300/hour

# Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1

# Analytics
ENABLE_ANALYTICS=True
GOOGLE_ANALYTICS_ID=your_ga_id

# Feature Flags
ENABLE_SOCIAL_LOGIN=True
ENABLE_PREMIUM_FEATURES=True
ENABLE_REAL_TIME_WAVEFORM=True
